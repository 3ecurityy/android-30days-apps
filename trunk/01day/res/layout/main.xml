<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/base" android:layout_width="320dip"
		android:layout_height="120dip" android:typeface="monospace"
		android:text="88:88:88" android:textSize="32pt" android:textColor="#336699"
		android:background="@drawable/bg" android:gravity="center"
		android:layout_centerInParent="true" />
	<TextView android:id="@+id/countdown" android:layout_width="320dip"
		android:layout_height="120dip" android:typeface="monospace"
		android:text="00:00:00" android:textSize="32pt" android:textColor="#00C2FF"
		android:gravity="center" android:layout_centerInParent="true" />
	<View android:layout_width="320dip" android:layout_height="120dip"
		android:background="@drawable/top" android:layout_centerInParent="true" />
</RelativeLayout>