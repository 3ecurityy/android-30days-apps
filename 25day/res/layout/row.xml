<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="6dip">
	<ImageView android:id="@+id/avatar" android:layout_width="48dip"
		android:layout_height="48dip" android:scaleType="matrix"
		android:layout_marginRight="8dip" />
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/text1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView android:id="@+id/text2" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@android:id/text1"
			android:layout_alignLeft="@android:id/text1" android:autoLink="web|email|phone" />

		<TextView android:id="@+id/text3" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@android:id/text2"
			android:layout_alignLeft="@android:id/text2" android:textAppearance="?android:attr/textAppearanceSmall"
			android:textStyle="italic" android:textSize="5pt"/>
	</LinearLayout>
</LinearLayout>